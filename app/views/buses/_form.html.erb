<%= form_for @bus do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :pick_up, "Pick Up Location" %>
  <%= f.text_field :pick_up %>
  <%= f.label :distance %>
  <%= f.text_field :distance %>
  <%= f.label :date %>
  <%= f.text_field :date %>
  <%= f.label :drive_time %>
  <%= f.text_field :drive_time %>
  <%= f.label :total_time %>
  <%= f.text_field :total_time %>
  <br>
  <%= f.submit %>
<% end %>
