<%= form_for @bus do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :date %>
  <%= f.text_field :date %>
  <%= f.label :depart_time, "Departure Time" %>
  <%= f.text_field :depart_time %>
  <%= f.label :depart, "Pick Up Address" %>
  <%= f.text_field :depart %>
  <%= f.label :destination, "Destination Address" %>
  <%= f.text_field :destination %>
  <%= f.label :return_time, "Return Time" %>
  <%= f.text_field :return_time %>
  <%= f.label :distance %>
  <%= f.text_field :distance, :readonly => true %>
  <%= f.label :drive_time %>
  <%= f.text_field :drive_time, :readonly => true %>
  <%= f.label :total_time %>
  <%= f.text_field :total_time, :readonly => true %>
  <%= f.submit %>
<% end %>
